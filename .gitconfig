[user]
	name = Shaohsuan Cheng
	email = shaohsuan.cheng.tw@gmail.com
[core]
	excludesfile = /Users/shaoc/.gitignore_global
	editor = vim
[alias]
	co = checkout
	cm = commit
	st = status
	br = branch
	cp = cherry-pick
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
[pager]
	branch = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
